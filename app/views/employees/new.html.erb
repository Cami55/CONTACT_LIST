<div class="container col-10 form-design">
  <div class="card">
    <%= simple_form_for @employee do |f| %>
    <h2> New Employee </h2>
    <br>
    <div class="form-inputs">
      <%= f.input :forename %>
      <%= f.input :surname %>
      <%= f.input :address %>
      <%= f.input :email %>
      <%= f.input :department%>
    </div>
    <br>

    <div class="form-actions">
      <%= f.button :submit, value: "Confirm & Submit", name: "submit", class: "btn btn-success"%>
    </div>

    <% end %>
  </div>
</div>
