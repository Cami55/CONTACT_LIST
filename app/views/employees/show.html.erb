<h2 class="card-title">Employee:</h2>
<div class="card" style="width: 50rem;">
  <div class="card-body">
      <h2 class="mt-8"><%= @employee.forename %> <%= @employee.surname %></h2>
      <br>
      <p class="infos_show"><strong>Email:</strong> <%= @employee.email %></p>
      <p class="infos_show"><strong>Address:</strong> <%= @employee.address %></p>
      <p class="infos_show"><strong>Department:</strong> <%= @employee.department %></p>
      <br>
    <%= link_to edit_employee_path, class: "btn-primary-design" do %>
    <i class="far fa-edit"></i>
    <% end %>
    <%= link_to employee_path, method: :delete, data: { confirm: "Are you sure you want to delete this employee?" }, class: "btn-danger-design" do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
</div>

<h2 class="card-title">Employee's Manager:</h2>
<div class="card" style="width: 50rem;">
  <div class="card-body">
      <h2 class="mt-8"><%= @employee.manager.forename.capitalize %> <%= @employee.manager.surname.capitalize %></h2>
      <br>
      <p class="infos_show"><strong>Email:</strong> <%= @employee.manager.email %></p>
      <p class="infos_show"><strong>Role:</strong> <%= @employee.manager.role %></p>
      <br>
      <%= link_to "Back to Contacts", employees_path, class: "btn-primary-design contact-design" %>
  </div>
</div>
