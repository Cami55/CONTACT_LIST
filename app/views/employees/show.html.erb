<div class="card" style="width: 50rem;">
  <div class="card-body">
      <h2 class="mt-8"><%= @employee.forename %> <%= @employee.surname %></h2>
      <br>
      <p class="infos_show"><strong>Email:</strong> <%= @employee.email %></p>
      <p class="infos_show"><strong>Address:</strong> <%= @employee.address %></p>
      <p class="infos_show"><strong>Department:</strong> <%= @employee.department %></p>
      <br>
    <%= link_to "Back to Contacts", employees_path, class: "btn btn-primary" %>
    <%= link_to 'Edit Employee', edit_employee_path, class: "btn btn-primary" %>
    <%= link_to 'Delete Employee', employee_path, method: :delete, data: { confirm: "Are you sure you want to delete this employee?" }, class: "btn btn-danger" %>
  </div>
</div>
